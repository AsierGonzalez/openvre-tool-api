{
    "id": "http://multiscalegenomics.eu/config-schema#",
    "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Tool Configuration",
    "_comment": "Should match the tool description json",
	"type": "object",
	"properties": {
        
        "input_files": {
			"type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "value": { "type": "string" }
                }
            }
        },

        "arguments": {
			"type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "value": { "type": ["string", "number", "integer", "boolean"] }
                }
            }
        }
    }
}
